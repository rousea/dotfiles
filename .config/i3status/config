# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#A3BE8C"
        color_bad = "#BF616A"
        color_degraded = "#EBCB8B"
}

#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "load"
order += "tztime local"
order += "volume master"

volume master {
  format = " %volume"
  format_muted = ""
}

memory {
        format = "%used RAM"
}

wireless _first_ {
        format_up = " (%quality at %essid) %ip"
        format_down = " down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = ": %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage"
        path = "/sys/class/power_supply/BAT%d/uevent"
        last_full_capacity = true
        low_threshold = 15
        status_full = ""
        status_chr = ""
        status_bat = ""
        status_unk = "?"
}

cpu_usage {
        format = "%usage CPU"
        max_threshold = "95"
}

tztime local {
        format = " %Y-%m-%d %H:%M:%S"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
}
